<div class="column is-half">
  <article class="media box">
    <figure class="media-left">
      <p class="image is-64x64">
        <img src="https://bulma.io/images/placeholders/64x64.png">
      </p>
    </figure>
    <div class="media-content">
      <%= render 'tweets/form' %>
    </div>
  </article>


  <% @tweets.each do |tweet|%>
    <div class="box">
      <article class="media">
        <div class="media-left">
          <figure class=" image is-64x64">
            <img src="https://bulma.io/images/placeholders/64x64.png">
          </figure>
        </div>
        <div class="media-content">
          <div class="content">
            <strong>Pratham Singh parihar</strong><br/>
            <small>@pratham</small><br/>
            <p><%= tweet.tweet %></p>
          </div>
          <nav class="level">
            <div class="level-left is-mobile">
              <%= link_to tweet_path(tweet), class: "level-item" do %>
                <span class="icon"><i class="fas fa-link"></i></span>
              <% end %>

              <%= link_to edit_tweet_path(tweet), class: "level-item" do %>
                <span class="icon"><i class="fas fa-pencil-alt"></i></span>
              <% end %>

              <%= link_to tweet, method: :destroy, data: { confirm: "Are you sure you want to delete this tweet?" }, class: "level-item" do %>
                <span class="icon"><i class="fas fa-trash-alt"></i></span>
              <% end %>

            </div>
          </nav>
        </div>
      </article>
    </div>
  <% end %>
</div>