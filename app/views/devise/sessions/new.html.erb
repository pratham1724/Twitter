<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <h2 class="title is-2">Sign in</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, class: "label" %>
            <div class="control">
              <%= f.input_field :email, required: false, class: "input", autocomplete: "email" %>
            </div>
          </div>

          <div class="field">
            <%= f.label :password, class: "label" %>
            <div class="control">
              <%= f.input_field :password, required: false, class: "input", autocomplete: "current-password" %>
            </div>
          </div>
          
          <div class="field">
            <div class="control">
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.button :submit, "Log in", class: "button is-info" %>
            </div>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
